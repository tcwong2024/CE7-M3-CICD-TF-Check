#################################################################################
# Provider name and version
#################################################################################

terraform {
  required_version = ">= 1.6"

  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 5.0"
    }
  }
}

#################################################################################
# Region name
#################################################################################
provider "aws" {
  region = var.region_name
}
